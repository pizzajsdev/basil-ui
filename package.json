{
  "name": "basil-ui",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm registry:build && react-router build",
    "dev": "react-router dev --host --open --port 5174",
    "format": "pnpm format:prettier && pnpm format:pkg",
    "format:pkg": "sort-package-json package.json",
    "format:prettier": "prettier --write README.md ./app",
    "lint": "pnpm typecheck && pnpm lint:prettier",
    "lint:prettier": "prettier --check README.md ./app",
    "prepare": "pnpm format:pkg",
    "registry:build": "shadcn registry:build",
    "start": "pnpm build && pnpm dlx http-server ./build/client -o",
    "start:ssr": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "test": "echo 'no tests yet'"
  },
  "dependencies": {
    "@react-router/node": "^7.5.3",
    "@react-router/serve": "^7.5.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "isbot": "^5.1.27",
    "lucide-react": "^0.504.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.3",
    "shadcn": "2.6.0-canary.2",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.8",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@react-router/dev": "^7.5.3",
    "@tailwindcss/vite": "^4.1.5",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "prettier": "^3.5.3",
    "sort-package-json": "^3.1.0",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=20.15.0"
  }
}
